{
  "name": "kerk-planning",
  "version": "0.0.0",
  "description": "Webcomponent kerk-planning following open-wc recommendations",
  "author": "kerk-planning",
  "license": "MIT",
  "main": "index.js",
  "module": "index.js",
  "scripts": {
    "build": "rimraf dist && tsc && rollup -c rollup.config.js",
    "start": "concurrently --kill-others --names tsc,rollup,es-dev-server \"npm run tsc:watch\" \"rollup -c rollup.config.js -w\" \"es-dev-server --app-index demo/index.html --node-resolve --open --watch\"",
    "tsc:watch": "tsc --watch",
    "lint:eslint": "eslint --ext .ts,.html . --ignore-path .gitignore",
    "format:eslint": "eslint --ext .ts,.html . --fix --ignore-path .gitignore",
    "lint:prettier": "prettier \"**/*.js\" \"**/*.ts\" --check --ignore-path .gitignore",
    "format:prettier": "prettier \"**/*.js\" \"**/*.ts\" --write --ignore-path .gitignore",
    "lint": "npm run lint:eslint && npm run lint:prettier",
    "format": "npm run format:eslint && npm run format:prettier"
  },
  "dependencies": {
    "lit-element": "^2.2.1",
    "lit-html": "^1.1.2"
  },
  "devDependencies": {
    "@google/clasp": "^2.3.0",
    "@open-wc/building-rollup": "^1.9.0",
    "@open-wc/eslint-config": "^2.0.0",
    "@types/google-apps-script": "^1.0.16",
    "@types/node": "13.11.1",
    "@typescript-eslint/eslint-plugin": "^2.20.0",
    "@typescript-eslint/parser": "^2.20.0",
    "concurrently": "^5.1.0",
    "es-dev-server": "^1.23.0",
    "eslint": "^6.1.0",
    "eslint-config-prettier": "^6.11.0",
    "husky": "^1.0.0",
    "lint-staged": "^10.0.0",
    "prettier": "^2.0.4",
    "rifraf": "^2.0.3",
    "rollup": "^2.28.1",
    "rollup-plugin-execute": "^1.1.1",
    "tslib": "^1.11.0",
    "typescript": "~3.9.0"
  },
  "eslintConfig": {
    "extends": [
      "@open-wc/eslint-config",
      "eslint-config-prettier"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "arrowParens": "avoid"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  }
}
